class Solution {
	public static int sum(int[] arr) {
		int max = arr[0];
		int sum = max;
		for (int i = 1; i < arr.length; i++) {
			sum += arr[i];
			if (sum > max) {
				max = sum;
			}
			if (sum < 0) {
				sum = 0;
			}
		}
		return max;
	}

	public static void main(String args[]) {
		int[] arr = { 16, 4, -4, -6, -8, -2 };
		System.out.println(sum(arr));
	}
}
