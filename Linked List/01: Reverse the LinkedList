
class LinkedList {

	Node head;
	static class Node {
		int data;
		Node next;
		Node(int d) {
			data = d;
			next = null;
		}
	}

	void add(int data) {
		Node toAdd = new Node(data);

		if (isEmpty()) {
			head = toAdd;
			return;
		}
		Node temp = head;
		while (temp.next != null) {
			temp = temp.next;
		}

		temp.next = toAdd;
	}

	boolean isEmpty() {
		return head == null;
	}

	void reverse() {
		Node prevNode = null,nextNode = null;
		Node currNode = head;
		while(currNode != null) {
			nextNode = currNode.next;
			currNode.next = prevNode;
			
			prevNode = currNode;
			currNode = nextNode;
		}
	}

	void print() {
		Node temp = head;
		while(temp!=null){
			System.out.print(temp.data+" ");
			temp = temp.next;
		}
	}
}
